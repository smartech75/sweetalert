$modal-width = 409px;

.landing-top {
  height: 370px;
  position: relative;

  .bg {
    background-image: linear-gradient(-132deg, #FF7D79 0%, #F28B74 92%);
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    -webkit-clip-path: url("#top-transition-clip-shape");
    clip-path: url("#top-transition-clip-shape");
  }

  .swal-modal-example {
    transform: none;
    opacity: 1;
    height: 292px;
    width: $modal-width;
    margin: 20px;
    background-color: white;
    box-shadow: 0 5px 22px 0 rgba(0,0,0,0.20);
    border-radius: 8px;
    margin-top: 59px;
    position: relative;
    z-index: 10;
    text-align: center;
    display: inline-block;
    vertical-align: middle;

    .swal-title {
      padding-top: 10px;
    }

    .swal-text {
      color: rgba(0,0,0,0.48);
      margin-top: 6px;
    }
  }

  .desc {
    display: inline-block;
    position: relative;
    color: white;
    margin-left: 50px;
    max-width: s('calc(100% - %s - 112px)', $modal-width);
    vertical-align: middle;
  }

  h2 {
    font-size: 30px;
    line-height: 51px;
    font-weight: 300;
  }

  .install {
    background: rgba(120,40,40,0.32);
    border-radius: 7px;
    max-width: 357px;
    padding: 12px;

    .button {
      background: rgba(255,255,255,0.39);
      width: 12px;
      height: 12px;
      border-radius: 50%;
      display: inline-block;
    }

    .command {
      font-family: $code-font;
      padding: 12px;
      padding-left: 30px;
      &::before {
        content: "$";
        opacity: 0.5;
        transform: rotate(8deg);
        font-size: 20px;
        position: absolute;
        margin-left: -27px;
        margin-top: -2px;
      }
    }
  }
}

.comparison-container {
  padding-bottom: 70px;
  text-align: center;

  h3 {
    font-size: 22px;
    color: #B49993;
    font-weight: 400;
    display: block;
    text-align: center;
    margin-top: 93px;
    margin-bottom: 80px;
  }

  .code-container {
    text-align: center;
    width: calc(50% - 60px);
    display: inline-block;
    vertical-align: middle;
  }

  .versus {
    width: 35px;
    height: 33px;
    background-image: url("/assets/images/vs.svg");
    display: inline-block;
    vertical-align: middle;
    margin: 0 30px;
  }

  h5 {
    font-size: 13px;
    color: rgba(0,0,0,0.21);
    text-transform: uppercase;
    text-align: left;
  }

  .code {
    background: #F8F8F8;
    border-radius: 4px;
    font-family: $code-font;
    text-align: left;
    padding: 20px;
    color: rgba(0, 0, 0, 0.75);
    font-size: 15px;
  }

  $preview-color = #A3DD82;

  .preview {
    background-color: $preview-color;
    box-shadow: 0 2px 8px 0 rgba(0,0,0,0.07);
    border-radius: 4px;
    border: none;
    color: white;
    font-size: 15px;
    color: white;
    padding: 9px 18px;
    margin-top: 20px;
    &::before {
      content: "";
      width: 0;
      height: 0;
      border-top: 6px solid transparent;
      border-bottom: 6px solid transparent;
      border-left: 10px solid white;
      display: inline-block;
      margin-right: 5px;
    }
    &:hover {
      background-color: lightness($preview-color, 65%)
    }
  }

  .remark {
    font-size: 20px;
    color: $main-color;
    margin-top: 80px;
  }

  .get-started-button {
    background-color: $main-color;
    color: white;
    border-radius: 8px;
    font-size: 22px;
    padding: 14px 55px;
    margin: 20px 0;
    display: inline-block;
  }

}

retina-bg(namespace, extension = 'png') {
  $path = "/assets/images/";
	background-image: url($path + namespace + '.' + extension);
  background-image: -webkit-image-set(url($path + namespace + '.' + extension) 1x, url($path + namespace + '@2x' + '.' + extension) 2x);
}

.customize-container {
  background-color: #999EAF;
  text-align: center;
  color: white;
  text-align: center;
  retina-bg("pattern")
  padding: 40px 0;
  -webkit-clip-path: url("#customization-transition-clip-shape");
  clip-path: url("#customization-transition-clip-shape");

  h3 {
    font-weight: 400;
    font-size: 20px;
    padding: 50px 0;
  }

  .example-modals {
    retina-bg("modal-examples")
    height: 284px;
    background-size: auto 100%;
    background-position: 0 0;
    animation: scrollExamples 80s infinite linear;
  }

  .view-api-button {
    border: 3px solid #FFFFFF;
    border-radius: 6px;
    color: white;
    padding: 12px 52px;
    font-size: 18px;
    margin-top: 60px;
    display: inline-block;
  }
}

@keyframes scrollExamples {
  0% {
    background-position: 0 0;
  }
  100% {
    background-position: -2146px 0;
  }
}

